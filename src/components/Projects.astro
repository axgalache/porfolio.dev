---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Flutter from "./icons/Flutter.astro"
import NodeJS from "./icons/NodeJS.astro"
import Python from "./icons/Python.astro"


const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  FLUTTER: {
    name: "Flutter",
    class: "bg-[#003159] text-white",
    icon: Flutter,
  },
  NODE: {
    name: "NodeJS",
    class: "bg-[#273623] text-white",
    icon: NodeJS,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#827331] text-white",
    icon: Python,
  },
}
const PROJECTS = [
  {
    title: "Ser Inclusivo - Asistente para la generación de contenido en Lectura Fácil",
    description:
      "Aplicación web desarrollada en nodeJS y nextJS para la generación de contenido en Lectura Fácil para personas con discapacidad cognitiva.",
    link: "https://lf.ser-inclusivo.com/",
    enquery: "mailto:axgalache@gmail.com?subject=Solicitud de usuario de prueba para Ser Inclusivo&body=Hola, me gustaría solicitar un usuario de prueba para la app de Ser Inclusivo.",
    image: "/projects/ser-inclusivo.png",
    tags: [TAGS.NEXT, TAGS.PYTHON, TAGS.TAILWIND, TAGS.NODE],
  },
  {
    title: "Kenko - App móvil de salud",
    description:
      "Aplicación móvil desarrollada en flutter. Asistente para profesionales de la medicina basado en Inteligencia Artificial.",
    link: "https://kenkoapp.es/",
    image: "/projects/kenko.png",
    tags: [TAGS.FLUTTER, TAGS.NODE],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, enquery }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Web
            </LinkButton>
          )}
          {enquery && (
            <LinkButton href={enquery}>
              <Link class="size-4" />
              Solicitar usuario de prueba
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



